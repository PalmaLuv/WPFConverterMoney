<Page x:Class="WPFAppConverter.MVVM.View.Pages.ConvertPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPFAppConverter.MVVM.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ConvertPage" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel VerticalAlignment="Stretch" Margin="20"> 
            <DataGrid AutoGenerateColumns="False"/>
            <Label Content="Test"/>
            <TextBox Margin="20,0"/>
        </StackPanel>

        <StackPanel VerticalAlignment="Stretch" Margin="20" Grid.Column="2">
            <DataGrid AutoGenerateColumns="False"/>
            <Label Content="Test"/>
            <TextBox Margin="20,0"/>
        </StackPanel>

        <Image Style="{StaticResource ArrowLeftAndRight}" Grid.Column="1"/>
        <Label VerticalAlignment="Bottom" Grid.Column="1" Content="Result"/>
    </Grid>
</Page>
