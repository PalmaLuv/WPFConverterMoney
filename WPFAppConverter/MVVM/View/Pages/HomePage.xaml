<Page x:Class="WPFAppConverter.MVVM.View.Pages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPFAppConverter.MVVM.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePage" Loaded="LoadingPage" DataContext="{StaticResource currentViewModel}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="300"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Margin="30 10">
            <StackPanel> 
                <DataGrid x:Name="top_assets" AutoGenerateColumns="False" Height="200"/>
                <!-- get table information assets -->
                <Button Content="View All" Command="{Binding AnaliticCommand}" Style="{StaticResource ViewAllButton-home}"/>
            </StackPanel>
        </Border>

    </Grid>
</Page>
