<Page x:Class="WPFAppConverter.MVVM.View.Pages.SettingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPFAppConverter.MVVM.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SettingPage" Loaded="LoadingPage">

    <Grid >
        <StackPanel Orientation="Horizontal" Height="25" VerticalAlignment="Top" Margin="20">
            <Label Content="Theme"/>
            <ComboBox x:Name="ComboTheme" Width="150" Margin="10,0">
                <ComboBoxItem>Light</ComboBoxItem>
                <ComboBoxItem>Dark</ComboBoxItem>
            </ComboBox>
            <Button Click="ApplyThemeButtonClick" Content="Apply" Width="100" FontSize="10"/>
        </StackPanel>
    </Grid>
</Page>
